<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
           http://maven.apache.org/POM/4.0.0
           https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!--
      This POM lives at dev/inventory/pom.xml.
      There is NO parent POM above it.
      We treat dev/inventory as the “root” of the Inventory module build.
    -->
    <groupId>com.mycompany</groupId>
    <artifactId>inventory-module</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Inventory Module</name>
    <description>
        Compile everything under dev/inventory and bundle SQLite driver.
    </description>

    <properties>
        <!-- pick whatever Java version you’re on; must match your JDK -->
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
    </properties>

    <build>
        <!--
          Tell Maven “my source root is exactly dev/inventory” (the folder this POM lives in).
          That way, Maven will compile all .java files under dev/inventory/**
          without expecting a src/main/java subfolder.
        -->
        <sourceDirectory>${project.basedir}</sourceDirectory>
        <testSourceDirectory>${project.basedir}</testSourceDirectory>

        <plugins>
            <!-- 1) Java compiler plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>

            <!-- 2) Shade plugin to produce an “uber‐JAR” that includes sqlite-jdbc -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals><goal>shade</goal></goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <!--
                                      Point this at your Main class (if you have one under inventory).
                                      If you start from Integration/Main, keep that here instead:
                                        <mainClass>IntegrationInventoryAndSupplier.Main</mainClass>
                                    -->
                                    <mainClass>IntegrationInventoryAndSupplier.Main</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- 1) SQLite JDBC driver: needed by your InventoryDatabaseManager -->
        <dependency>
            <groupId>org.xerial</groupId>
            <artifactId>sqlite-jdbc</artifactId>
            <version>3.42.0.0</version>
            <scope>runtime</scope>
        </dependency>

        <!-- 2) JUnit 5, if you have any unit tests under dev/inventory -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.10.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
